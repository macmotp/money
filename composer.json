{
    "name": "macmotp/money",
    "version": "v0.1.0",
    "description": "Light PHP Library to handle Money",
    "keywords": [
        "macmotp",
        "money",
        "php"
    ],
    "homepage": "https://github.com/macmotp/money",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Gava",
            "email": "marco.gava@me.com",
            "homepage": "https://github.com/macmotp",
            "role": "Software Engineer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "illuminate/collections": "^v8.83.27"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.21",
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "Macmotp\\": "src/Money"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Macmotp\\Money\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
